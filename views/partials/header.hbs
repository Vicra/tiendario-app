<div class="container">
    <div class="col-xs-2">
        <div class="pull-left">
            <a href="/">
                <i class="fa fa-home" aria-hidden="true"></i> 
                Productos
            </a>
        </div>
    </div>
    <div class="col-xs-1">
        <div class="pull-left">
            {{!-- <a href="/catalog">
                Cat√°logo
            </a> --}}
        </div>
    </div>
    <div class="col-xs-2">
        <div class="pull-left">
            <a href="/contact">
                Contacto
            </a>
        </div>
    </div>
    <div class="col-xs-3">
        <div class="pull-middle">
            <img src="tiendario.png" onerror="hasError()" id="logo" width="70%">
        </div>
    </div>
    <div class="col-xs-2">
        <div class="dropdown pull-left">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> Carrito
                
                <span id="totalItems">
                </span>
            </a>
            <div class="dropdown-menu">
                <div class="cart" id="cart">
                </div>
            </div>
        </div>
    </div>
    <div class="col-xs-2">
        <div class="pull-left">
            {{#if user}}
                <a href="/view-account">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    {{user.name}}
                </a>
            {{else}}
                <a href="/login">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    Cuenta
                </a>
            {{/if}}
        </div>
    </div>
</div>

<script src="/scripts/cart.js"></script>
<script>
    updateTopCart();

    function hasError() {
        document.getElementById(`logo`).src = "../tiendario.png";
    }
</script>