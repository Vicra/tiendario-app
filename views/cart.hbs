<div class="wrapper">
    <h1>{{title}}</h1>
    {{# if products }}
        <div class="cart page">
            <ul class="list-group">
                {{# each products }}
                <li class="list-group-item clearfix">
                    <div class="col-xs-5">
                        <strong>{{ this.item.name }}</strong><br/>
                        <em>{{{this.item.description}}}</em>
                    </div>
                    <div class="col-xs-2 text-right">
                        <span class="badge">{{ this.quantity }}</span>
                    </div>
                    <div class="col-xs-3 text-right">
                        {{ this.price }} Lps
                    </div>
                    <div class="col-xs-2 text-right">
                        <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Quitar</a>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="text-right">
            <strong>Total: {{ totalPrice }} Lps</strong>
        </div>
        <hr>
        <div class="text-right">
            <a href="/address/" type="button" class="btn btn-success">Continuar</a>
        </div>
    {{ else }}
        No has agregado productos.
    {{/if}}
</div>
