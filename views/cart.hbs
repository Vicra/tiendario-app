<div class="container">
    <h1>Lista de Productos</h1>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Imagen</th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Subtotal</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody id="products">
        </tbody>
    </table>
    <input type="hidden" id="deliveryType" value="{{deliveryType}}">
    <div id="details" style="text-align: right;">
    </div>
    <br><br>
    <form action="/placeorder/" name="placeorder" method="POST">
        <input type="hidden" id="cart2" name="cart2">
        <input type="hidden" name="params" value="{{params}}">
        <div class="text-right">
            <a onclick="validate();" type="button" class="btn btn-success">Continuar</a>
        </div>
    </form>
</div>

<script src="/scripts/cart.js"></script>
<script>
    $( document ).ready(function() {
        drawProducts();
    });

    function drawProducts(){
        $('#products').text('');
        let cart = JSON.parse(localStorage.getItem('cart'));

        cart.subtotal = 0;
        for(let i=0; i<cart.products.length; i++){
            cart.subtotal += cart.products[i].price * cart.products[i].amount;
        }

        for(let i=0; i<cart.products.length; i++){
            let row = 
            `
            <tr>
                <td>
                    <img src="${cart.products[i].image}" alt="" height="50px">
                </td>
                <td>
                    <strong>${cart.products[i].name}</strong><br/>
                    <em>${cart.products[i].description}</em>
                </td>
                <td>
                    Lps. ${cart.products[i].price}
                </td>
                <td class="form-inline">
                    <a onclick="subs(${cart.products[i].id})" class="btn btn-default" 
                        role="button" style="margin-bottom: 0;">-</a>
                    <input type="numeric" class="form-control" value="${cart.products[i].amount}" style="max-width: 15%;" name="count"
                        id="count_${cart.products[i].id}" max="10" onchange="checkValue()">
                    <a onclick="sum(${cart.products[i].id})" class="btn btn-info" 
                        role="button" style="margin-bottom: 0;">+</a>
                </td>
                <td>
                    Lps. ${cart.products[i].amount * cart.products[i].price}
                </td>
                <td>
                    <a onclick="remove(${cart.products[i].id})" class="btn btn-default"></i> Quitar</a>
                </td>
            </tr>   
            `
            ;
            $('#products').append(row);
        }

        let deliveryType = $('#deliveryType').val();
        if(deliveryType == 'pickup'){
            cart.delivery = 0;
            cart.total = cart.subtotal + cart.delivery;

            $('#details').html(
            `
                <h4>Subtotal: Lps. ${cart.subtotal}</h4>
                <h4>* Costo de Envio: Lps. ${cart.delivery} </h4>
                <h3>Total: Lps. ${cart.total}</h3><br>

                <i>* Puedes recoger tu pedido entre 7 y 8 calle<br>
                    20 ave Barrio Río Piedras
                </i>
            `);
        }
        else {
            cart.delivery = 80;
            cart.total = cart.subtotal + cart.delivery;

            $('#details').html(
            `
                <h4>Subtotal: Lps. ${cart.subtotal}</h4>
                <h4>* Costo de Envio: Lps. ${cart.delivery} </h4>
                <h3>Total: Lps. ${cart.total}</h3><br>

                <i>* El costo de envío puede variar en la factura<br>
                    final dependiendo de tu ubicación.
                </i>
            `);
        }
    }

    function sum(id) {
        let maxItems = 5;
        let currentVal = parseInt($(`#count_${id}`).val());
        let cart = JSON.parse(localStorage.getItem('cart'));
        
        if (currentVal >= maxItems) {
            for(let i=0; i<cart.products.length; i++){
                if(cart.products[i].id == id){
                    cart.products[i].amount = maxItems;
                    break;
                }
            }
        }
        else {
            for(let i=0; i<cart.products.length; i++){
                if(cart.products[i].id == id){
                    cart.products[i].amount = currentVal + 1;
                    break;
                }
            }
        }

        localStorage.setItem('cart', JSON.stringify(cart));
        drawProducts();
    }

    function subs(id) {
        let currentVal = parseInt($(`#count_${id}`).val());
        let cart = JSON.parse(localStorage.getItem('cart'));
        
        if (currentVal != 1) {
            for(let i=0; i<cart.products.length; i++){
                if(cart.products[i].id == id){
                    cart.products[i].amount = currentVal - 1;
                    break;
                }
            }
        }

        localStorage.setItem('cart', JSON.stringify(cart));
        drawProducts();
    }

    function checkValue(selfi) {
        if (selfi.value > maxItems) {
            selfi.value = maxItems;
        }
        else if (selfi.value < 1) {
            selfi.value = 1;
        }
    }

    function remove(id){
        let cart = JSON.parse(localStorage.getItem('cart'));
        for(var i = cart.products.length; i--;){
            if(cart.products[i].id == id){
                cart.products.splice(i,1);
            }
        }
        localStorage.setItem('cart', JSON.stringify(cart));
        drawProducts();
        updateTopCart();
    }

    function validate(){
        let cart2 = JSON.stringify(JSON.parse(localStorage.getItem('cart')));
        $('#cart2').val(cart2);
        resetCart();
        $("form[name='placeorder']").submit();
    }
</script>